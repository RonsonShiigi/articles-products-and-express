<h1>Edit Article</h1>
<form action="/articles/{{title}}/edit" method="POST">
    <div>
        <h3>Editing: {{title}}</h3>
    </div>

    <div>
        <label for="title">New Article Title</label>
        <input type="text" name="title" id="title" placeholder="{{title}}">
    </div>
    <div>
        <label for="body">Body</label>
        <input type="text" name="body" id="body" placeholder="{{body}}">
    </div>
    <div>
        <label for="author">By</label>
        <input type="text" name="author" id="author" placeholder="{{author}}">
    </div>

    <div>
        <button>Finshed Editing</button>
    </div>

</form>
<form action="/articles/{{title}}/delete" method="GET">
    <div>
        <button type="submit">Delete Article</button>
    </div>
</form>