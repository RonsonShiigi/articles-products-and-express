<h1 id="editHead">Edit Product</h1>
<form action="/products/{{id}}/edit" method="POST">
    <div>
        <h3>Editing: {{name}}</h3>
    </div>
    <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name">
    </div>
    <div>
        <label for="price">Price</label>
        <input type="text" name="price" id="price">
    </div>
    <div>
        <label for="inventory">Inventory</label>
        <input type="text" name="inventory" id="inventory">
    </div>
    <div>
        <button>Finished Editing</button>
    </div>
</form>
<form action="/products" method="GET">
    <div>
        <button>Go Back to Products</button>
    </div>
</form>
<form action="/products/{{id}}/delete" method="GET">
    <div>
        <button type="submit">Delete Product</button>
    </div>
</form>